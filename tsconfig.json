{
  "compilerOptions": {
    "exactOptionalPropertyTypes": true,
    "module": "node16",
    "noFallthroughCasesInSwitch": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "strict": true,
    "outDir": "build"
  },
  "include": ["src/**/*"],
  "exclude": ["**/*.spec.ts"]
}
